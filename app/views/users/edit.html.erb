<%= render 'layouts/logout' %>

<div class="container">
  <%= render 'layouts/errors', obj: @user %>
  <h2 class="mx-auto d-flex justify-content-center my-5">Profile Edit</h2>
  <div class="row">
    <div class="mx-auto d-flex justify-content-center">
      <%= form_with model: @user, url: user_path(@user.id), method: :patch, local: true do |f| %>

        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :profile_image %>
          <%= f.file_field :profile_image, class:"form-control-file" %>
        </div>

        <div class="field">
          <%= f.label :introduce %>
          <%= f.text_field :introduce, class:"form-control" %>
        </div>

        <div class="actions mt-3">
          <%= f.submit "編集" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

