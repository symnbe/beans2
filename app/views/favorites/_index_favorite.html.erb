 <% if bean.favorited_by?(current_user) %>
  <%= link_to bean_favorites_path(bean), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;font-size: 1rem;"></i>
  <% end %>
<% else %>
  <%= link_to bean_favorites_path(bean), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="font-size: 1rem;"></i>
  <% end %>
<% end %>