<% if bean.favorited_by?(current_user) %>
  <%= link_to bean_favorites_path(bean), method: :delete, class: "favorite-link", remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red; font-size: <%= size %>;"></i>&emsp;
  <% end %>
<% else %>
  <%= link_to bean_favorites_path(bean), method: :post, remote: true, class: "favorite-link" do %>
    <i class="fas fa-heart" aria-hidden="true" style="font-size: <%= size %>;"></i>&emsp;
  <% end %>
<% end %>